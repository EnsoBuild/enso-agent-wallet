{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "paths": {
      "@lit-protocol/fss-signer": ["../fss-signer/src"],
      "@lit-protocol/fss-tool-registry": ["../fss-tool-registry/src"],
      "@lit-protocol/fss-tool-erc20-transfer": [
        "../fss-tool-erc20-transfer/src"
      ],
      "@lit-protocol/full-self-signing": ["../full-self-signing/src"],
      "@lit-protocol/fss-tool": ["../fss-tool/src"]
    }
  },
  "include": ["src/**/*.ts", "src/lib/prompts"],
  "references": [
    {
      "path": "../aw-subagent-openai/tsconfig.lib.json"
    },
    {
      "path": "../full-self-signing/tsconfig.lib.json"
    },
    {
      "path": "../fss-tool-sign-ecdsa/tsconfig.lib.json"
    },
    {
      "path": "../fss-tool-uniswap-swap/tsconfig.lib.json"
    },
    {
      "path": "../fss-tool-erc20-transfer/tsconfig.lib.json"
    },
    {
      "path": "../fss-tool-registry/tsconfig.lib.json"
    },
    {
      "path": "../fss-tool/tsconfig.lib.json"
    },
    {
      "path": "../fss-signer/tsconfig.lib.json"
    },
    {
      "path": "../.."
    }
  ],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
